<div class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to t('.stoic'), root_path, class: 'navbar-brand' %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbar">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item <%= current_page?(root_path) ? 'active' : '' %>">
        <%= link_to t('.home'), root_path, class: 'nav-link' %>
      </li>
      <li class="nav-item <%= current_page?(about_path) ? 'active' : '' %>">
        <%= link_to t('.about'), about_path, class: 'nav-link' %>
      </li>
      <% if current_user %>
        <li class="nav-item <%= current_page?(edit_user_path) ? 'active' : '' %>">
          <%= link_to t('.account'), edit_user_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
    <ul class="navbar-nav my-2 my-lg-02">
      <li class="nav-item <%= current_page?(new_sessions_path) ? 'active' : '' %>">
        <% if current_user %>
          <%= link_to t('.sign_out'), sessions_path, method: 'delete', class: 'nav-link' %>
        <% else %>
          <%= link_to t('.sign_in'), new_sessions_path, class: 'nav-link' %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
