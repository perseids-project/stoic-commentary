    <h1 class="display-3">
      <%= t('.title') %>
    </h1>
    <p class="text-light bg-dark pl-1 pr-1">
      <%= t('.description') %>
    </p>
  </div>
</div>

<div class="container pb-4">
  <div class="row text-center">
    <div class="col-md-12">
      <h2>
        <%= t('.about_title') %>
      </h2>
      <p>
        <%= t('.about_text') %>
      </p>
    </div>
  </div>

  <hr>

  <div class="row text-center">
    <div class="col-md-12">
      <h2>
        <%= t('.other_title') %>
      </h2>
      <p>
        <%= t('.other_text') %>
      </p>
    </div>
  </div>

  <hr>

  <div class="row text-center">
