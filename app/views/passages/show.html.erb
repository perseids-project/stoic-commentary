<p id="notice"><%= notice %></p>

<p>
  <strong>Ref:</strong>
  <%= @passage.ref %>
</p>

<p>
  <strong>Text:</strong>
  <%= @passage.text.urn %>
</p>

<p>
  <strong>Passage:</strong>
  <%= @passage.passage %>
</p>

<p>
  <strong>Rank:</strong>
  <%= @passage.rank %>
</p>

<% if @passage.previous_passage %>
  <%= link_to '«', passage_path(@passage.previous_passage) %> |
<% end %>

<%= link_to 'Edit', edit_passage_path(@passage) %> |
<%= link_to 'Back', passages_path %>

<% if @passage.next_passage %>
  | <%= link_to '»', passage_path(@passage.next_passage) %>
<% end %>

<p>
  <strong>Comments:</strong>
</p>

<% @passage.comments.order(:created_at).each do |comment| %>
  <hr>

  <p>
    <strong>User:</strong>
    <%= comment.user.name %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= comment.comment %>
  </p>
<% end %>

<%= link_to 'New comment', new_passage_comment_path(@passage) %>
